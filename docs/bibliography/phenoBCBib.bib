	File = {:Users/deirdreloughnan/Documents/Papers/bibfiles/Finn, Straszewski, Peterson/Annals of Applied Biology/Finn, Straszewski, Peterson - 2007 - A general growth stage key for describing trees and woody plants.pdf:pdf},
	Issn = {00034746},
	Journal = {Annals of Applied Biology},
	Keywords = {BBCH scale,Leaf bearing,Needle bearing,Phenology},
	Number = {1},
	Pages = {127--131},
	Title = {{A general growth stage key for describing trees and woody plants}},
	Volume = {151},
