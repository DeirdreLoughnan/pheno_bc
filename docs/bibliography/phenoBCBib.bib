@article{Flynn2018,
	Abstract = {Accurate predictions of spring plant phenology with climate change are critical for projec-tions of growing seasons, plant communities and a number of ecosystem services, including carbon storage. Progress towards prediction, however, has been slow because the major cues known to drive phenology -- temperature (including winter chilling and spring forcing) and photoperiod -- generally covary in nature and may interact, making accurate predictions of plant responses to climate change complex and nonlinear. Alternatively, recent work sug-gests many species may be dominated by one cue, which would make predictions much simpler. Here, we manipulated all three cues across 28 woody species from two North American forests. All species responded to all cues examined. Chilling exerted a strong effect, especially on budburst ({\`{A}}15.8 d), with responses to forcing and photoperiod greatest for leafout ({\`{A}}19.1 and {\`{A}}11.2 d, respectively). Interactions between chilling and forcing suggest that each cue may compensate somewhat for the other. Cues varied across species, leading to staggered leafout within each community and supporting the idea that phenology is a critical aspect of species' temporal niches. Our results suggest that predicting the spring phenology of communities will be difficult, as all species we studied could have complex, nonlinear responses to future warming.},
	Author = {Flynn, D. F. B. and Wolkovich, E. M.},
	Doi = {10.1111/nph.15232},
	File = {:Users/deirdreloughnan/Documents/Papers/bibfiles/Flynn, Wolkovich/New Phytologist/Flynn, Wolkovich - 2018 - Temperature and photoperiod drive spring phenology across all species in a temperate forest community.pdf:pdf},
	Issn = {0028646X},
	Journal = {New Phytologist},
	Keywords = {chilling,climate change,communities,daylength,forcing temperatures,forest,temporal niche,winter},
	Pages = {1353--1362},
	Title = {{Temperature and photoperiod drive spring phenology across all species in a temperate forest community}},
	Url = {http://doi.wiley.com/10.1111/nph.15232},
	Volume = {219},
	Year = {2018},
	Bdsk-Url-1 = {http://doi.wiley.com/10.1111/nph.15232},
	Bdsk-Url-2 = {https://doi.org/10.1111/nph.15232}}

